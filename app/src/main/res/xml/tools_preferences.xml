<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<PreferenceCategory
    android:title="Bottom panel">
    <CheckBoxPreference
        android:key="bp_tab"
        app:defaultValue="true"
        android:title="@string/tab_button"
        android:summary="@string/inserts_indentation" />
    <CheckBoxPreference
        android:key="bp_end"
        app:defaultValue="true"
        android:title="@string/end_button"
        android:summary="@string/moves_cursor_end" />
    <CheckBoxPreference
        android:key="bp_trackpad"
        app:defaultValue="true"
        android:title="@string/trackpad"
        android:summary="@string/trackpad_like_controller" />
    <CheckBoxPreference
        android:key="bp_nl"
        app:defaultValue="true"
        android:title="@string/new_line"
        android:summary="@string/leaves_current_line_makes_blank_line" />
</PreferenceCategory>
</PreferenceScreen>
