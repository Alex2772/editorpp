<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<PreferenceCategory
    android:title="Bottom panel">
    <CheckBoxPreference
        android:key="bp_tab"
        app:defaultValue="true"
        android:title="Tab button (TAB)"
        android:summary="Insert four spaces or tab" />
    <CheckBoxPreference
        android:key="bp_end"
        app:defaultValue="true"
        android:title="End button (END)"
        android:summary="Move cursor to the end of line" />
    <CheckBoxPreference
        android:key="bp_trackpad"
        app:defaultValue="true"
        android:title="Trackpad"
        android:summary="Trackpad-like cursor position controller" />
    <CheckBoxPreference
        android:key="bp_nl"
        app:defaultValue="true"
        android:title="New line (NL)"
        android:summary="Leave the current line and make next new blank line. Independent of cursor's horizontal position" />
</PreferenceCategory>
</PreferenceScreen>
